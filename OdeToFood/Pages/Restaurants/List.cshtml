@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants List";
}

<h1 class="h4">Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-append">
                <button class="btn btn-secondary">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn btn-lg btn-light"
               asp-page="./Detail"
               asp-route-restaurantId="@restaurant.Id">
                @*ASP-tool to transfer var to detail page*@
                <i class="fas fa-search-plus"></i>
            </a>
            <a class="btn btn-lg btn-light"
               asp-page="./Edit"
               asp-route-restaurantId="@restaurant.Id">
                @*ASP-tool to transfer var to detail page*@
                <i class="fas fa-edit"></i>
            </a>
        </td>
    </tr>
    }

</table>

<a class="btn btn-primary" asp-page="./Edit">Create New Restaurant</a>

@Model.Message